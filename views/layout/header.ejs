<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">ADI SHOP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <% pages.forEach(page => { %>
                <% if (page.link == "home") { %>
                <li class="nav-item"><a class="nav-link" href="/"><%= page.title %> </a class="nav-link"></li
                    class="nav-item">
                <% } else {%>
                <li class="nav-item"><a class="nav-link" href="<%= page.link %>"><%= page.title %> </a></li>
                <%}%>
                <% }) %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/cart/checkout" class="nav-link">My Cart (
                        <%= qtyheader%>
                        )</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        <%- messages('message', locals) %>

        <div class="row">
            <div class="col-12 col-md-3">
                <h3>Categories</h3>
                <ul class="list-group">
                    <li class="list-group-item"><a href="/products">All Products</a></li>
                    <% categories.forEach(cat => { %>
                    <li class="list-group-item"><a href="/products/category/<%= cat.link %>"><%= cat.title%></a></li>
                    <% }) %>
                </ul>
            </div>
            <div class="col-12 col-md-1"></div>
            <div class="col-12 col-md-8" style="margin-top: 75px;">